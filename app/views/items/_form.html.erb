<%= simple_form_for [@list, @list.items.new], html: {class: 'form-horizontal'} do |f| %>
  <div class="form-group">
  <%= f.input :description, input_html: { class: 'form-control input-lg' }, placeholder: "Enter a todo", label: false %>
  </div>
  <div class="form-actions">
  <%= f.button :submit, 'Save this todo', class: 'btn btn-success' %>
  </div>
<% end %>