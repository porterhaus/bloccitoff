<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <h2 class="form-header">Sign in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

      <%= devise_error_messages! %>
      
      <div class="form-inputs">
        <div class="form-group">
        <%= f.text_field :email, autofocus: true, class: 'form-control input-lg', placeholder: "Enter email address" %>
        </div>
        <div class="form-group">
        <%= f.password_field :password, autofocus: true, class: 'form-control input-lg', placeholder: "Enter your password" %>
        </div>
        <div class="form-group">
        <% if devise_mapping.rememberable? %>
          <%= f.label :remember_me, class: 'checkbox' do %>
            <%= f.check_box :remember_me %> Remember me
          <% end %>
        <% end %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Sign in", class: 'btn btn-default' %> or <%= render "devise/shared/links" %>
      </div>
    <% end %>
    <hr>
    
  </div>
</div>
