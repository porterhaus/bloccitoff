<% if @list.nil? %>

   <%= link_to "New To-do List", new_list_path, class: 'btn btn-success' %>

<% else %>
  
  <h1><%= @list.title %></h1>

  <%= link_to "New Item", new_list_item_path(@list, @item), class: 'btn btn-primary' %>

  <%= link_to "Edit List", edit_list_path(@list), class: 'btn btn-default' %>
  
  <%= link_to "Delete List", @list, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this list?' } %>

<hr>
  <% @list.items.each do |item| %>
    <p><%= render partial: 'items/item', locals: { list: @list, item: item } %></p>
  <% end %>

<% end %>
